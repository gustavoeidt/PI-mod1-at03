<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
    <body class="EerieBlackBG" style="padding: 0; margin: 0;">
        <header style="background-image: url('/img/header.jpg'); padding: 10px 20px;">
            <h1>Infocon</h1>
        </header>
        
        <nav class="independenceBG">
            <ul style="margin: 0; padding: 10px 20px; list-style: none;">
                <li>@Html.ActionLink("Home","Index","Home")</li> 
                <li>@Html.ActionLink("Listagem de Editais","Editais","Home")</li> 
                <li>@Html.ActionLink("Contato","Contato","Home")</li> 
                
                @{
                    if(!ViewBag.logado){
                        <li>@Html.ActionLink("Entrar","Login","Home")</li>
                    }
                        else
                    {
                        <li>@Html.ActionLink("Cadastra Edital","CadastraEdital","Home")</li> 
                        <li>@Html.ActionLink("Cadastra Notícia","CadastraNoticia","Home")</li>
                        <li>@Html.ActionLink("Sair","Logoff","Home")</li>
                    }
                }
                
                
                
            </ul>
        </nav>

        <div style="margin: 20px;">
            @RenderBody()
        </div>

        <footer class="amazonBG" style="padding: 40px 20px; clear: both;">
            &copy; @DateTime.Now.Year  Infocon | Fone: +55 (47) 9999-9999
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
